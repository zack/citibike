generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model Dock {
  id     Int    @id @default(autoincrement())
  name   String @unique
  starts Trip[] @relation("endDock")
  ends   Trip[] @relation("startDock")
}

model Trip {
  id          Int  @id @default(autoincrement())
  day         Int
  month       Int
  year        Int
  startDock   Dock @relation("startDock", fields: [startDockId], references: [id])
  startDockId Int
  endDock     Dock @relation("endDock", fields: [endDockId], references: [id])
  endDockId   Int

  @@index(fields: [endDockId])
  @@index(fields: [startDockId])
}
