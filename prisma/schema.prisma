generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider          = "postgresql"
  relationMode      = "prisma"
}

model Station {
  id                Int          @id(map: "Station_Pkey") @default(autoincrement())
  borough           String?
  communityDistrict Int?
  councilDistrict   Int?
  latitude          String
  longitude         String
  name              String       @unique
  days              StationDay[] @relation("stationId")
}

model StationDay {
  id             Int     @id @default(autoincrement())
  acousticArrive Int
  acousticDepart Int
  day            Int
  stationId      Int
  electricArrive Int
  electricDepart Int
  month          Int
  year           Int
  station        Station @relation("stationId", fields: [stationId], references: [id])

  @@unique([day, month, year, stationId])
  @@index([stationId])
}
